<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <li <%= "class = 'complete'" if all_complete?(list) %>>
      <a href="/lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
        <p> <%= todos_completed(list) %> / <%= list[:todos].size %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <div class='actions'>
    <a class="add" href="/lists/new">New List</a>
  </div>
<% end %>
